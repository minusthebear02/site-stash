<% if policy(Like.new).create? %>
  <% if like = current_user.liked(bookmark) %>
    <%= link_to [@topic, bookmark, like], class: 'btn btn-danger unlike', method: :delete do %>
      <i class="glyphicon glyphicon-star-empty"></i>&nbsp; Unlike
    <% end %>
  <% else %>
    <%= link_to [@topic, bookmark, Like.new], class: 'btn btn-primary like', method: :post do %>
      <i class="glyphicon glyphicon-star"></i>&nbsp; Like
    <% end %>
  <% end %>
<% end %>
